{
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "module": "ES6",                     
    "target": "ES2020",
    "strict": true,                           
    "outDir": "./tsc-output",
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  }
}
